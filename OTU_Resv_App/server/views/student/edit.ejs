<%- include ../partials/header.ejs %>

<title>Edit Student</title>
<link rel="icon" type="image/x-icon" href="/assets/images/otu-fav.png">

<%- include ../partials/nav.ejs %>

<div class="container">
    <div class="row">
        <div class="offset-md-3 col-md-6">


            <form class="form" method="POST">
                <div class="form-group mt-2">
                    <label for="nameTextField">Full Name</label>
                    <input type="text" class="form-control"
                           id="nameTextField"
                           placeholder="Enter the Students Full Name"
                           name="Name"
                           value="<%= Student.Name %>"
                           required>
                </div>

                <div class="form-group mt-2">
                    <label for="authorTextField">Student Number</label>
                    <input type="text" class="form-control"
                           id="StudentNumTextField"
                           placeholder="Enter the Students's OTU Number"
                           name="StudentNum"
                           value="<%= Student.StudentNum%>"
                           required>
                </div>

                <div class="form-group mt-2">
                    <label for="PhoneNumTextField">Phone Number</label>
                    <input type="text" class="form-control"
                           id="PhoneNumTextField"
                           placeholder="Enter the Students Phone"
                           name="PhoneNum"
                           value="<%= Student.PhoneNum %>"
                           required>
                </div>

                <div class="form-group mt-2">
                    <label for="YearTextField">Phone Number</label>
                    <input type="text" class="form-control"
                           id="YearTextField"
                           placeholder="Enter the current year the Student is In"
                           name="Year"
                           value="<%= Student.Year %>"
                           required>
                </div>

                <div class="form-group mb-3">
                    <label for="priceTextField">GPA</label>
                    <input type="text" class="form-control"
                           id="GpaTextField"
                           placeholder="Enter the Student's GPA Score"
                           name="Gpa"
                           value="<%= Student.Gpa %>"
                           required>
                </div>

                <button class="btn btn-primary mt-3" type="submit">
                    <i class="fas fa-edit"></i> Submit</button>

                <a href="/studentlist" class="btn btn-warning mt-3">
                    <i class="fas fa-undo"></i> Cancel</a>
            </form>
        </div>
    </div>
</div>


<%- include ../partials/footer.ejs %>

<%- include ../partials/bottom.ejs %>